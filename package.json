{
  "name": "artist-and-the-nonentity-game",
  "version": "1.0.0",
  "description": "Humorous UI-agnostic game inspired by Beauty and The Beast movie.",
  "main": "index.js",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "start": "ts-node -r tsconfig-paths/register core/main.ts",
    "test": "jest",
    "test:order": "jest --runInBand"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bmstefanski/artist-and-the-nonentity-game.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/bmstefanski/artist-and-the-nonentity-game/issues"
  },
  "homepage": "https://github.com/bmstefanski/artist-and-the-nonentity-game#readme",
  "dependencies": {
    "axios": "^0.19.2",
    "lodash": "^4.17.15",
    "tsconfig-paths": "^3.9.0"
  },
  "devDependencies": {
    "@types/jest": "^25.2.1",
    "@types/lodash": "^4.14.150",
    "@types/node": "^13.13.1",
    "jest": "^25.3.0",
    "jest-mock-extended": "^1.0.8",
    "prettier": "^2.0.4",
    "ts-jest": "^25.4.0",
    "ts-node": "^8.8.2",
    "tsc": "^1.20150623.0",
    "tslint": "^6.1.1",
    "tslint-config-airbnb": "^5.11.2",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.8.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "moduleDirectories": [
      "node_modules",
      "core"
    ],
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "core/**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
